<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ACME Inc.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #login {
            position: absolute;
            left: 45%;
            top: 45%;
        }
    </style>
</head>
<body>
    <div class="container body-content">
        <div class="jumbotron" style="margin-top:10px; background:white">
            <img src="~/Content/Images/acme.png" style="max-width:100%; max-height:100%" />
            @RenderBody()
        </div>
        

        <footer style="position:absolute; bottom:10%">
            <hr />
            <p>&copy; @DateTime.Now.Year - ACME Inc. </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
