@model IEnumerable<ACME_WebApp.Models.Purchase>

@{
    ViewBag.Title = "Index";
}

<h2>Purchase History</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.user_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.prod_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.prod_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.prod_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.prod_imgUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width: inherit; height: inherit; vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.User.user_Name)
        </td>
        <td style="width: inherit; height: inherit; vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.Product.prod_name)
        </td>
        <td style="width: inherit; height: inherit; vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.Product.prod_description)
        </td>
        <td style="width: inherit; height: inherit; vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.Product.prod_price)
        </td>
        <td style="width: inherit; height: inherit; vertical-align: middle;">
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td style="width: inherit; height: inherit; vertical-align: middle;">
            <div style="max-width:100px">
                <img src="~/Content/Images/@item.Product.prod_imgUrl" alt="No image selected" class="img-rounded" style="max-width:100%;height:auto;width:auto\9;" />
            </div>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.purchase_ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.purchase_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.purchase_ID })*@
        </td>
    </tr>
}

</table>
