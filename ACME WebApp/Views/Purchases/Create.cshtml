@model ACME_WebApp.Models.Purchase

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Purchase</h4>
    <hr />
    @Html.HiddenFor(model => model.product_ID);
    @Html.HiddenFor(model => model.Product);
    @Html.HiddenFor(model => model.User);
    @Html.HiddenFor(model => model.user_ID);
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Product.prod_name, null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <a class="form-control">@Html.DisplayTextFor(model => model.Product.prod_name)</a>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Product.prod_description, null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <a class="form-control">@Html.DisplayTextFor(model => model.Product.prod_description)</a>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Product.prod_price, null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <a class="form-control">@Html.DisplayTextFor(model => model.Product.prod_price)</a>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <img src="~/Content/Images/@Model.Product.prod_imgUrl" alt="No image selected" style="width:inherit;height:inherit;" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Pay and Complete Purchase" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Products", "Index","Products", null, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
